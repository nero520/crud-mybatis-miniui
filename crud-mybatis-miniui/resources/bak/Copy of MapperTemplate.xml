<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${bussPackage}.mapper.${className}Mapper">
	<!-- Result Map -->
	<resultMap id="ResultMap" type="${bussPackage}.entity.$!{className}Entity">
#foreach($item in $!{columnDatas})
		<result column="$!item.columnDBName" property="$item.columnName" />
#end
	</resultMap>

	<!-- $!{tableName} 字段 -->
	<sql id="Column_List">
		$!{SQL.columnFields}
	</sql>

	<!-- 查询条件 -->
	<sql id="Example_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
#foreach($item in $!{columnDatas})
#set($testStr = $!item.columnName + " != null and " + $!item.columnName + " != ''")
#if($!item.dataType == 'String')
#set($testStr = $!testStr + " and " + $!item.columnName + " != ''")
#end
			<if test="$!testStr">
				and $!item.columnDBName = #{$!item.columnName}
			</if>
#end
		</trim>
	</sql>
	
		<!-- like查询条件 -->
	<sql id="Like_Where_Clause">
		where 1=1
		<trim suffixOverrides=",">
#foreach($item in $!{columnDatas})
#set($testStr = $!item.columnName + " != null and " + $!item.columnName + " != ''")
#if($!item.columnDBName == 'id')
			<if test="$!testStr">
				and $!item.columnDBName = #{$!item.columnName}
			</if>
#else
			<if test="$!testStr">
				and $!item.columnDBName like CONCAT('%',#{$!item.columnName},'%')
			</if>
#end
#end
		</trim>
	</sql>

	<!-- 插入记录 -->
	<insert id="add" parameterType="Object">
#if ($keyType =='02')
		<selectKey resultType="java.lang.Integer" order="AFTER"
			keyProperty="id">
			SELECT LAST_INSERT_ID() 
		</selectKey>
#end
		$!{SQL.insert}
	</insert>

	<!-- 根据id，修改记录 -->
	<update id="update" parameterType="Object">
		$!{SQL.update}
	</update>

	<!-- 删除记录 -->
	<delete id="delete" parameterType="Object">
		$!{SQL.delete}
	</delete>

	<!-- 根据id查询 -->
	<select id="findById" resultMap="ResultMap" parameterType="Object">
		$!{SQL.selectById}
	</select>

	<!-- 查询列表 -->
	<select id="findListByCondition" resultMap="ResultMap"
		parameterType="Object">
		select 
		<include refid="Column_List" />
		from ${tableName} 
		<include refid="Example_Where_Clause" />
	</select>

	<!-- 列表总数 -->
	<select id="queryByCount" resultType="java.lang.Integer"
		parameterType="Object">
		select count(1) from ${tableName} 
		<include refid="Like_Where_Clause" />
	</select>

	<!-- 查询分页列表 -->
	<select id="queryByList" resultMap="ResultMap" parameterType="Object">
		select 
		<include refid="Column_List" />
		from ${tableName} 
		<include refid="Like_Where_Clause" />
		<if test="pager.orderCondition != null and pager.orderCondition != ''">
			${pager.orderCondition} 
		</if>
		<if test="pager.queryCondition != null and pager.queryCondition != ''">
			${pager.queryCondition}
		</if>
	</select>

</mapper>   
